<header class="navbar navbar-fixed-topnavbar-inverse">
    <div class="container">
        <%= link_to t(".title"),  "#" , id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to t("header.home"), root_path %></li>
                <li><%= link_to t("header.help"), "#" %></li>
                    <% if logged_in? %>
                        <li><%= link_to t("header.users"), "#" %></li>
                        <li id="account" class="dropdown">
                            <%= link_to "#", class: "dropdown-toggle" , "data-toggle": "dropdown", id: "account" do %>
                                <%= t("header.account") %>
                                <b class="caret"></b>
                            <% end %>
                            <ul id="dropdown-menu" class="dropdown-menu">
                                <li><%= link_to t("header.profile"), current_user %></li>
                                <li><%= link_to t("header.settings"), '#' %></li>
                                <li class="divider"></li>
                                <li><%= button_to t("header.sign_out"), logout_path, method: :delete %></li>
                            </ul>
                        </li>
                    <% else %>
                        <li><%= link_to t("header.sign_in"), login_path %></li>
                    <% end %>
                <li><%= link_to t("header.help"), "#" %></li>
        </nav>
    </div>


</header>
